// //////////////////////////////////////////////////////// GLSL version //
#version 430 core

// ////////////////////////////////////////////////////////////// Inputs //
in vec3 fTexCoords;

// ///////////////////////////////////////////////////////////// Outputs //
out vec4 outColor;

// //////////////////////////////////////////////////////////// Uniforms //
uniform samplerCube texSkybox;

// //////////////////////////////////////////////////////////////// Main //
void main() {
    // Final pixel color
    outColor = texture(texSkybox, fTexCoords);
}

