// //////////////////////////////////////////////////////// GLSL version //
#version 430 core

// ////////////////////////////////////////////////////////////// Inputs //
layout (location = 0) in vec3 vPosition;

// ///////////////////////////////////////////////////////////// Outputs //
out vec3 gTexCoords;

// //////////////////////////////////////////////////////////// Uniforms //
uniform mat4 world;
uniform mat4 transform;

// //////////////////////////////////////////////////////////////// Main //
void main() {
    gTexCoords = vPosition;
    vec4 position = transform * vec4(vPosition, 1.0);
    gl_Position = position.xyww;
}

