// //////////////////////////////////////////////////////// GLSL version //
#version 430 core

// ////////////////////////////////////////////////////////////// Inputs //
in vec2 fTexCoords;

// ///////////////////////////////////////////////////////////// Outputs //
out vec4 outColor;

// //////////////////////////////////////////////////////////// Uniforms //
uniform sampler2D texGlyph;
uniform vec3 glyphColor;

// //////////////////////////////////////////////////////////////// Main //
void main() {
    outColor = vec4(glyphColor, 1.0) *
               vec4(1.0, 1.0, 1.0, texture(texGlyph, fTexCoords).r);
}

