// //////////////////////////////////////////////////////// GLSL version //
#version 430 core

// ////////////////////////////////////////////////////////////// Inputs //
layout (location = 0) in vec2 vPosition;
layout (location = 1) in vec2 vTexCoords;

// ///////////////////////////////////////////////////////////// Outputs //
out vec2 gTexCoords;

// //////////////////////////////////////////////////////////// Uniforms //
uniform mat4 transform;

// //////////////////////////////////////////////////////////////// Main //
void main() {
    gTexCoords = vTexCoords;
    gl_Position = transform * vec4(vPosition, 0.0, 1.0);
}

